    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/layout_rounded"
        android:elevation="20dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/share_newsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/green"
            app:srcCompat="@drawable/add_24"
            tools:ignore="RtlHardcoded" />
        <ImageView
            android:id="@+id/img_msg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/message_24"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="35dp"
            android:layout_toLeftOf="@id/share_newsBtn"/>

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home_24"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@id/img_msg"/>

        <ImageView
            android:id="@+id/img_source"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/source_24"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="35dp"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/img_open"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/open_in_new_24"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/share_newsBtn"/>

    </RelativeLayout>


</RelativeLayout>