<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChooseLocationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/card_view_rounded">

        <ImageView
            android:id="@+id/_img_power"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/power"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone"
            android:layout_below="@+id/_img_power"
            android:gravity="center"
            android:text="sign in to continue"/>

    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ?"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:textColor="@color/green"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/layout_rounded"
        android:elevation="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:hint="Email address"
                android:textSize="14dp"
                android:paddingStart="12dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_text_et" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="numberPassword"
                android:hint="Enter password"
                android:paddingStart="12dp"
                android:textSize="14dp"
                android:drawableEnd="@drawable/red_eye_24"
                android:paddingEnd="12dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_text_et" />

            <TextView
                android:id="@+id/et_select"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Select DISCO"
                android:paddingStart="12dp"
                android:padding="10dp"
                android:elevation="8dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:drawableEnd="@drawable/keyboard_arrow_down_24"
                android:paddingEnd="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_text_et" />
            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:hint="Enter Meter Number"
                android:paddingStart="12dp"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_text_et" />

            <Button
                android:id="@+id/btnSet"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="SET LOCATION"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:backgroundTint ="@color/purple_200"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/check_circle"/>
            <TextView
                android:id="@+id/remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/img_check"
                android:text="Remember me"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:text="Forgot password?"
                android:textSize="14dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>