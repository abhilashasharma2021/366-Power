<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backOne"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FeedsFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relative"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iVBack"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/path" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/iVBack"
            android:fontFamily="@font/robotoregular"
            android:text="Backs"
            android:id="@+id/txBack"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/robotobold"
            android:text="Feeds"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp" />



</RelativeLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/rlDetails"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:id="@+id/txTitle"
        android:fontFamily="@font/robotobold"
        android:text="New Supports channels"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/txTitle"
        android:fontFamily="@font/robotoregular"
        android:text="May, 29"
        android:textColor="@color/grey_light"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_below="@+id/txTitle"
        android:fontFamily="@font/robotoregular"
        android:text="Information "
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/iv"
        android:textColor="@color/pink"
        android:textSize="13sp" />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="12dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/iv"
        android:layout_toStartOf="@+id/ivNext"
        app:cardElevation="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img" />


    </com.google.android.material.card.MaterialCardView>



    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/ivNext"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/right" />


</RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_margin="10dp"
    android:background="@color/viewgrey"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:id="@+id/txTitle1"
                android:fontFamily="@font/robotobold"
                android:text="Protection of Meters"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/txTitle1"
                android:fontFamily="@font/robotoregular"
                android:text="May, 29"
                android:textColor="@color/grey_light"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txTitle1"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/iv1"
                android:fontFamily="@font/robotoregular"
                android:text="Pole "
                android:textColor="@color/pink"
                android:textSize="13sp"
                android:visibility="visible" />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="12dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/iv1"
                android:layout_toStartOf="@+id/ivNext1"
                app:cardElevation="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img" />


            </com.google.android.material.card.MaterialCardView>



            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ivNext1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/viewgrey"/>


    </LinearLayout>


    </ScrollView>
</RelativeLayout>