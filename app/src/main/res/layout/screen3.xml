<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:id="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/current"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_below="@+id/img"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_marginTop="60dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/img">

                <TextView
                    android:id="@+id/txt_gif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:text="Stay Energized"
                    android:textColor="@color/greyDark"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_new"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center"
                    android:layout_below="@+id/txt_gif"
                    android:text="Our app will help you to stay \n energized all the time. "
                    android:textColor="@color/grey_light"
                    android:textSize="15sp" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>



</RelativeLayout>