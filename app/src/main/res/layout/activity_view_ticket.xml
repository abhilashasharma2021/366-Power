<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_white"
    tools:context=".activity.ViewTicketActivity">
    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_rounded"
        android:elevation="30dp">

        <RelativeLayout
            android:id="@+id/relatvie"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/layout_rounded"
            android:elevation="30dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:src="@drawable/back_arrow" />
        </RelativeLayout>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/parent_layout">

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="MAY 14,10:33AM"
            android:textSize="12dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/tv_text1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user3" />

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tv_text1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_user2"
            android:background="@drawable/grey_layout_rounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text=" Hi There! \n I am Rabi, from 23 jay street Wuse ll, i'm \n reaching out in regards to the Faulty \n Transformer complaint submitted on the \n 23/06/2021"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="MAY 14,10:33AM"
            android:textSize="12dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/rl_layout"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_user3"
            android:text=" Thank you for reaching out,our\n Agent will respond to you shortly"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="MAY 15,10:33AM"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/rl_layout2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_text5"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:layout_toRightOf="@+id/iv_user2"
            android:background="@drawable/layout_rounded">

            <TextView
                android:id="@+id/tv_view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text=" Status Change"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@+id/tv_view5"
                android:background="@color/blue"
                android:paddingStart="5dp"
                android:text="IN PROGRESS "
                android:textColor="@color/black"
                android:textSize="12dp" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_text4"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/tv_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="MAY 15,10:33AM"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/rl_layout1"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_text4"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/blue_layout_rounded">

            <TextView
                android:id="@+id/tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text=" Hello Rabi,"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_rabi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hello"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:text=" The management is attending to your"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_rabi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rabi"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:text=" complaint"
                android:textColor="@color/black" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_text5"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_layout3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_btn"
        android:elevation="10dp">

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:hint=" type reply..."
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:src="@drawable/near_me_24" />

        <ImageView
            android:id="@+id/emoji"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:layout_toLeftOf="@+id/send"
            android:src="@drawable/emoticon_24" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toLeftOf="@+id/emoji"
            android:src="@drawable/attach_file_24" />


    </RelativeLayout>
</RelativeLayout>